{
  "name": "proxmox-panel-api",
  "version": "1.0.0",
  "description": "Hosting Control Panel API mit Hono",
  "main": "src/index.js",
  "type": "module",
  "engines": {
    "bun": ">=1.0.0"
  },
  "scripts": {
    "dev": "bun --watch src/index.js",
    "start": "bun src/index.js",
    "migrate": "bunx knex migrate:latest",
    "migrate:rollback": "bunx knex migrate:rollback",
    "migrate:make": "bunx knex migrate:make",
    "seed": "bunx knex seed:run",
    "seed:make": "bunx knex seed:make",
    "fresh": "bun run migrate:rollback && bun run migrate && bun run seed",
    "dev:full": "concurrently \"bun run dev\" \"cd frontend && bun run dev\" --names \"backend,frontend\" --prefix-colors \"blue,green\"",
    "test": "bun test --serial",
    "frontend": "cd frontend && npm run dev",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.3",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.5.0",
    "hono": "^4.0.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "mysql2": "^3.14.1",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
